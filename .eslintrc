
{
  "ecmaFeatures": {
    "jsx": true
  },
  "env": {
    "browser": true,
    "node": true,
    "jquery": true
  },
  "rules": {
  	"semi": 2,
  	"curly": [2, "all"],
  	"eqeqeq" : 2,
  	"guard-for-in" : 2,
    "no-multi-spaces": 0,
    "no-invalid-this" : 0,
    "no-magic-numbers" : 0,
    "consistent-return" : 0,
    "no-unused-expressions" : 0
  },
  "globals": {
    jQuery: true,
    $: true
  },
  "parser": "babel-eslint",
  "extends" : [
  	"defaults/rules/eslint/best-practices/walmart"
  ]
}

